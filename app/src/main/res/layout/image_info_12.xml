<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- ================= TOP BAR ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="@dimen/_56sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:src="@drawable/arrow___left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photo_information"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/btnCrown"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:src="@drawable/ic_crown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================= SCROLL CONTENT ================= -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode=""
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- IMAGE DETAILS TITLE -->
            <TextView
                android:id="@+id/txtImageDetails"
                android:textStyle="bold"
                android:text="@string/image_details"
                android:textSize="@dimen/_13ssp"
                android:textColor="#9E9E9E"
                android:layout_margin="@dimen/_16sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />

            <!-- DETAILS CARD -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/detailsCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_round_i11"
                android:padding="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/txtImageDetails"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <include
                    android:id="@+id/row1"
                    layout="@layout/item_image_info_row_12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <include
                    android:id="@+id/row2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    layout="@layout/item_image_info_row_12"
                    app:layout_constraintTop_toBottomOf="@id/row1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <include
                    android:id="@+id/row3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    layout="@layout/item_image_info_row_12"
                    app:layout_constraintTop_toBottomOf="@id/row2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <include
                    android:id="@+id/row4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    layout="@layout/item_image_info_row_12"
                    app:layout_constraintTop_toBottomOf="@id/row3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <include
                    android:id="@+id/row5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    layout="@layout/item_image_info_row_12"
                    app:layout_constraintTop_toBottomOf="@id/row4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- LOCATION TITLE -->
            <TextView
                android:id="@+id/txtLocationTitle"
                android:textStyle="bold"
                android:text="@string/location"
                android:textSize="@dimen/_13ssp"
                android:textColor="#9E9E9E"
                android:layout_margin="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/detailsCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />

            <!-- MAP SVG -->
            <ImageView
                android:id="@+id/imgMap"
                android:layout_width="0dp"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:minHeight="@dimen/_200sdp"
                android:src="@drawable/map_location_09"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_card_round_i11"
                app:layout_constraintTop_toBottomOf="@id/txtLocationTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- ADDRESS CARD -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/addressCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_round_i11"
                android:padding="@dimen/_12sdp"
                android:layout_margin="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/imgMap"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/imgLoc"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/_12_6_image_loc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="@string/address_text"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@id/imgLoc"
                    app:layout_constraintTop_toTopOf="@id/imgLoc"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
