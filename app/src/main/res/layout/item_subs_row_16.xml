<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_4sdp">

    <!-- ICON -->
    <ImageView
        android:id="@+id/imgFeature"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- FEATURE TEXT -->
    <TextView
        android:id="@+id/txtFeature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Feature name"
        android:textSize="@dimen/_13ssp"
        android:textColor="#000000"
        android:layout_marginStart="@dimen/_12sdp"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toEndOf="@id/imgFeature"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgPremium"/>

    <!-- PREMIUM -->
    <ImageView
        android:id="@+id/imgPremium"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        app:layout_constraintEnd_toStartOf="@id/imgBasic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- BASIC -->
    <ImageView
        android:id="@+id/imgBasic"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
