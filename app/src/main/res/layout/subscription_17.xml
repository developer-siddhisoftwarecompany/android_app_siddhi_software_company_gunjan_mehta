<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!-- ================= TOP IMAGE ================= -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="GPS Map Camera – Add Timestamp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <!-- CLOSE ICON -->
        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:src="@drawable/subs_plan_17_cross"
android:paddingRight="@dimen/_8ssp"
            app:layout_constraintTop_toTopOf="@id/txtTitle"
            app:layout_constraintEnd_toEndOf="@id/txtTitle"/>


        <ImageView
            android:id="@+id/imgTop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="68dp"
            android:scaleType="centerCrop"
            android:src="@drawable/subs_plan_top_image"
            app:layout_constraintDimensionRatio="22:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <!-- ================= CONTENT ================= -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@id/imgTop">

            <!-- TITLE -->


            <!-- INCLUDED FEATURES -->
            <TextView
                android:id="@+id/txtIncluded"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Included Features"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/imgTop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headerRow"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:background="#F2F2F2"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/txtIncluded"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium Benifits"
                    android:textColor="#666666"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_36sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/headerPremium"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:text="Premium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="#666666"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/_4sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/headerBasic"/>

                <TextView
                    android:id="@+id/headerBasic"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:text="Basic"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- FEATURE ROWS -->
            <include
                android:id="@+id/rowStamp"
                layout="@layout/item_feature_row_17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@id/headerRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <include
                android:id="@+id/rowCollection"
                layout="@layout/item_feature_row_17"
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/rowStamp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <include
                android:id="@+id/rowSupport"
                layout="@layout/item_feature_row_17"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/rowCollection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <include
                android:id="@+id/rowAds"
                layout="@layout/item_feature_row_17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/rowSupport"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- CHOOSE PLAN -->
            <TextView
                android:id="@+id/txtChoosePlan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Choose Your Subscription"
                android:gravity="center"
                android:textStyle="bold"

                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_24sdp"
                app:layout_constraintTop_toBottomOf="@id/rowAds"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- MONTHLY CARD -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardMonthly"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_round_i11"
                android:padding="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@id/txtChoosePlan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cardYearly"
                app:layout_constraintWidth_percent="0.48">

                <ImageView
                    android:id="@+id/imgUser"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/subs_plan_btm_user_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/txtMonthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly Plan"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/imgUser"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/txtMonthlyPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹299 / month"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/txtMonthly"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- YEARLY CARD -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardYearly"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_border_orange_17"
                android:padding="@dimen/_12sdp"
                app:layout_constraintTop_toTopOf="@id/cardMonthly"
                app:layout_constraintStart_toEndOf="@id/cardMonthly"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.48">

                <ImageView
                    android:id="@+id/imgThumb"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/subs_plan_btm_thumbs_up"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/txtYearly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Special Offer"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/imgThumb"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/txtYearlyPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹999 / year"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/txtYearly"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- START TRIAL BUTTON -->
            <TextView
                android:id="@+id/btnStartTrial"
                android:layout_width="0dp"
                android:layout_height="@dimen/_48sdp"
                android:text="Start Your 7 Days Trial"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/save_button_09"
                android:layout_marginTop="@dimen/_24sdp"
                app:layout_constraintTop_toBottomOf="@id/cardMonthly"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Subscription will auto-renew. Cancel anytime.\nTerms of Services."
                android:gravity="center"
                android:textColor="#6B6B6B"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/btnStartTrial"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
