<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TOP IMAGE (FULL WIDTH) -->
        <ImageView
            android:id="@+id/imgTop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/subs_plan_top_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="22:9"/>

        <!-- CLOSE ICON (OVER IMAGE) -->
        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/subs_plan_17_cross"
            android:layout_margin="@dimen/_16sdp"
            app:layout_constraintTop_toTopOf="@id/imgTop"
            app:layout_constraintEnd_toEndOf="@id/imgTop"/>

        <!-- CONTENT CONTAINER -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@id/imgTop">

            <!-- TITLE -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="GPS Map Camera â€“ Add Timestamp"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@id/imgTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- INCLUDED -->
            <TextView
                android:id="@+id/txtIncluded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Included Features"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@id/txtTitle"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- FEATURES -->
            <include
                android:id="@+id/rowStamp"
                layout="@layout/item_feature_row_17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@id/txtIncluded"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <include
                android:id="@+id/rowCollection"
                layout="@layout/item_feature_row_17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/rowStamp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <include
                android:id="@+id/rowSupport"
                layout="@layout/item_feature_row_17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/rowCollection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <include
                android:id="@+id/rowAds"
                layout="@layout/item_feature_row_17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/rowSupport"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- BUTTON -->
            <TextView
                android:id="@+id/btnStartTrial"
                android:layout_width="0dp"
                android:layout_height="@dimen/_48sdp"
                android:text="Start Your 7 Days Trial"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/save_button_09"
                android:layout_marginTop="@dimen/_24sdp"
                app:layout_constraintTop_toBottomOf="@id/rowAds"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
