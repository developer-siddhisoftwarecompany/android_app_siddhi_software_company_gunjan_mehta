<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F6F7FB">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- ================= TOP BAR ================= -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/arrow___left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stamp Camera"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imgCrown"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/crown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack" />

        <!-- ================= CATEGORY SWITCH ================= -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/categoryBar"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_margin="16dp"
            android:background="@drawable/bg_card_16"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <ImageView
                android:id="@+id/icStamp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cat_1_map"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/txtStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stamp Camera"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/icStamp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/icCam"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cat_1_map"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/txtCam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/icCam"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ================= TRENDING ================= -->
        <TextView
            android:id="@+id/txtTrending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trending"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/categoryBar"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/viewAllTrending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View all"
            android:textSize="12sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/txtTrending" />

        <!-- TRENDING GRID -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/trendingGrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtTrending"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- BIG LEFT CARD -->
            <View
                android:id="@+id/trendingBig"
                android:layout_width="0dp"
                android:layout_height="260dp"
                android:background="@drawable/bg_card_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/trendingRightTop"
                app:layout_constraintWidth_percent="0.48" />

            <!-- RIGHT TOP -->
            <View
                android:id="@+id/trendingRightTop"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:background="@drawable/bg_card_border_orange_17"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/trendingBig"
                app:layout_constraintWidth_percent="0.48" />

            <!-- RIGHT BOTTOM -->
            <View
                android:id="@+id/trendingRightBottom"
                android:layout_width="0dp"
                android:layout_height="125dp"

                android:background="@drawable/bg_card_16"
                app:layout_constraintTop_toBottomOf="@id/trendingRightTop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/trendingBig" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ================= FESTIVAL ================= -->
        <TextView
            android:id="@+id/txtFestival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Festival"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/trendingGrid"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/viewAllFestival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View all"
            android:textSize="12sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/txtFestival" />

        <!-- FESTIVAL GRID -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/festivalGrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtFestival"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:id="@+id/fest1"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:background="@drawable/bg_card_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/fest2"
                app:layout_constraintWidth_percent="0.48" />

            <View
                android:id="@+id/fest2"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:background="@drawable/bg_card_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.48" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
