        <!--  FONT COLOR ROW  -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fontColorRow"
            android:layout_width="0dp"
            android:layout_height="@dimen/_48sdp"
            android:paddingHorizontal="@dimen/_16sdp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/transparencyGraph"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Font Color Icon -->
            <ImageView
                android:id="@+id/iconFontColor"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/bucket_07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- Font Color Text -->
            <TextView
                android:id="@+id/txtFontColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Font Color"
                android:textSize="@dimen/_14ssp"
                android:textColor="#000000"
                android:layout_marginStart="@dimen/_12sdp"
                app:layout_constraintStart_toEndOf="@id/iconFontColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- Arrow -->
            <ImageView
                android:id="@+id/colorCircleOrange"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:src="@drawable/ellipse_07"
                android:layout_marginStart="@dimen/_8sdp"

                app:layout_constraintEnd_toStartOf="@id/iconFontArrow1"
                app:layout_constraintTop_toTopOf="@id/iconFontArrow1"
                app:layout_constraintBottom_toBottomOf="@id/iconFontArrow1"/>



            <ImageView
                android:id="@+id/iconFontArrow1"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@drawable/arrow___down_07"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--  FONT COLOR OPTIONS  -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fontColorOptions"
            android:layout_width="0dp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@id/fontColorRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

