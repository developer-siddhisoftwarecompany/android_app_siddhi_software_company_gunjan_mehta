        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dateRow"
            android:layout_width="0dp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:paddingHorizontal="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stamp">

            <ImageView
                android:id="@+id/iconCalendar"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/calendar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:text="Date &amp; Time"
                android:textColor="#000000"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iconCalendar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtDateValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Friday, 14th June 2024 14:57"
                android:textColor="#6B6B6B"
                android:textSize="@dimen/_12ssp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="end"
                app:layout_constraintStart_toEndOf="@id/txtDateTitle"
                app:layout_constraintEnd_toStartOf="@id/iconDateArrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/iconDateArrow"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@drawable/arrow___right_07"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--  ADDRESS-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addressRow"
            android:layout_width="0dp"
            android:layout_height="@dimen/_48sdp"
            android:paddingHorizontal="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@id/dateRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iconLocation"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/location_07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/txtAddressTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="@dimen/_14ssp"
                android:textColor="#000000"
                android:layout_marginStart="@dimen/_12sdp"
                app:layout_constraintStart_toEndOf="@id/iconLocation"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/txtAddressValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="#E53935"
                app:layout_constraintEnd_toStartOf="@id/iconAddressArrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/iconAddressArrow"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@drawable/arrow___right_07"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--  ADDRESS TEXT  -->
        <!-- ADDRESS TEXT + EDIT ICON -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addressTextContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintTop_toBottomOf="@id/addressRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Address Text -->
            <TextView
                android:id="@+id/addressText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="201–207, Oasis Corner, Dhanmora Char Rasta, Katargam, Surat – 395004, Gujarat, India."
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/black"
                android:lineSpacingExtra="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iconEditOfLoc"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- Edit Icon -->
            <ImageView
                android:id="@+id/iconEditOfLoc"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/stampp_1_up_edit_loc"
                android:layout_marginStart="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/addressText"
                app:layout_constraintBottom_toBottomOf="@id/addressText"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

