<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7FB">

    <!-- ================================================= -->
    <!-- TOP BAR -->
    <!-- ================================================= -->

    <!-- BACK ARROW (Top-left) -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/arrow___left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- SCREEN TITLE (Center) -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Watermark"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"/>


    <!-- This card shows how watermark will look on photo -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardPreview"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        android:background="@drawable/watermark_0_blue_mark"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- MAP IMAGE / LOCATION SNAPSHOT -->
        <!-- You can replace this drawable with full map image -->
        <ImageView
            android:id="@+id/imgMap"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/watermark_0_loc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- ADDRESS + LAT/LONG + DATE TIME -->
        <!-- This text represents watermark data -->
        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Victoria Park Dr
210, Burswood WA 6400, Paris
Lat: 21.223999, Long: 72.827511
31/01/24 02:32 PM"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@id/imgMap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgMap"/>

        <!-- TAG / BRAND LOGO -->
        <!-- Example: Tagofy â€“ Geotag Map Camera -->
        <ImageView
            android:id="@+id/imgTag"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:src="@drawable/placeholder_tag"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@id/imgMap"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================================================= -->
    <!-- WATERMARK ENABLE / DISABLE ROW -->
    <!-- ================================================= -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rowWatermark"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_white_card"
        app:layout_constraintTop_toBottomOf="@id/cardPreview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Watermark Icon -->
        <ImageView
            android:id="@+id/imgWatermarkIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/watermark_0_blue_mark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Watermark Label -->
        <TextView
            android:id="@+id/txtWatermark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watermark"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/imgWatermarkIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Toggle Icon (Crown / Premium) -->
        <ImageView
            android:id="@+id/imgToggle"
            android:layout_width="44dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/watermark_0_switch_on"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================================================= -->
    <!-- OPTIONS : LOGO / TEXT -->
    <!-- ================================================= -->

    <!-- Custom Logo Option -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/optionLogo"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_white_card"
        app:layout_constraintTop_toBottomOf="@id/rowWatermark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/optionText"
        app:layout_constraintWidth_percent="0.48">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Add Text Option -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/optionText"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_white_card"
        app:layout_constraintTop_toTopOf="@id/optionLogo"
        app:layout_constraintStart_toEndOf="@id/optionLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.48">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================================================= -->
    <!-- TEXT INPUT FOR WATERMARK -->
    <!-- ================================================= -->

    <EditText
        android:id="@+id/edtWatermarkText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Enter Watermark Text"
        android:layout_margin="16dp"
        android:background="@drawable/bg_edit_text"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/optionLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================================================= -->
    <!-- IMAGE GRID (STICKERS / PRESET WATERMARKS) -->
    <!-- ================================================= -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerImages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/edtWatermarkText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
