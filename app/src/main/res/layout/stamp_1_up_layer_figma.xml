<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F2F3F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- ================= TOP BAR ================= -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topBar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow___left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Advance Template"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/btnDone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/tick_on_07"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ================= MAP CARD ================= -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mapCard"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_margin="16dp"
            android:background="#5C6170"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/imgMap"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:src="@drawable/map_loc_stamp1_up_layer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


             </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ================= ROW : MAP TYPE ================= -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowMapType"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/mapCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Tick -->
            <ImageView
                android:id="@+id/tickMapType"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/tick_on_07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- Text -->
            <TextView
                android:id="@+id/txtMapType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Map Type"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/tickMapType"
                app:layout_constraintEnd_toStartOf="@id/iconMapType"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- Right Arrow -->
            <ImageView
                android:id="@+id/iconMapType"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/arrow___right_07"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ================= ROW : LOGO ================= -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowLogo"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/rowMapType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Tick -->
            <ImageView
                android:id="@+id/tickLogo"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/tick_on_07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- Text -->
            <TextView
                android:id="@+id/txtLogo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Logo"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/tickLogo"
                app:layout_constraintEnd_toStartOf="@id/iconPro"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- PRO badge -->
            <ImageView
                android:id="@+id/iconPro"
                android:layout_width="28dp"
                android:layout_height="16dp"
                android:src="@drawable/pro_stamp1_up_figma"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@id/iconCamera"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- Camera icon -->
            <ImageView
                android:id="@+id/iconCamera"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/drawer_6_act_c_w_d_camera"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

<!--        short add.-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowShortAddress"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/rowLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/tickShortAddress"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/tick_on_07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/txtShortAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Short Address"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/tickShortAddress"
                app:layout_constraintEnd_toStartOf="@id/txtShortAddressValue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/txtShortAddressValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Automatic"
                android:textSize="12sp"
                android:textColor="#6B6B6B"
                app:layout_constraintEnd_toStartOf="@id/iconShortAddressArrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/iconShortAddressArrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/arrow___right_07"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

<!--        //loc.-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowLocation"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/rowShortAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/tickLocation"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/tick_on_07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/tickLocation"
                app:layout_constraintEnd_toStartOf="@id/iconLocationArrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/iconLocationArrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/arrow___right_07"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/txtLocationAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Victoria Park Dr 210, Burswood WA 6400, Paris."
            android:textSize="12sp"
            android:textColor="#6B6B6B"
            android:padding="16dp"
            android:background="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/rowLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


<!--        //lat long-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowLatLong"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtLocationAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/tickLatLong"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/tick_on_07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/txtLatLong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Lat / Long"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/tickLatLong"
                app:layout_constraintEnd_toStartOf="@id/txtLatLongValue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/txtLatLongValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lat: 21.223999, Long: 72.827511"
                android:textSize="12sp"
                android:textColor="#6B6B6B"
                app:layout_constraintEnd_toStartOf="@id/iconLatLongArrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/iconLatLongArrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/arrow___right_07"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

<!--         date , time-->
<!--        -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowDateTime"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/rowLatLong"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/tickDateTime"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/tick_on_07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/txtDateTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Date &amp; Time"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/tickDateTime"
                app:layout_constraintEnd_toStartOf="@id/txtDateTimeValue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/txtDateTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31/07/24 02:32 PM"
                android:textSize="12sp"
                android:textColor="#6B6B6B"
                app:layout_constraintEnd_toStartOf="@id/iconDateTimeArrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/iconDateTimeArrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/arrow___right_07"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

<!--        time zone-->
<!--        -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowTimeZone"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/rowDateTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/tickTimeZone"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/tick_on_07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/txtTimeZone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Time Zone"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/tickTimeZone"
                app:layout_constraintEnd_toStartOf="@id/txtTimeZoneValue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/txtTimeZoneValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GMT +05:30"
                android:textSize="12sp"
                android:textColor="#6B6B6B"
                app:layout_constraintEnd_toStartOf="@id/iconTimeZoneArrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/iconTimeZoneArrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/arrow___right_07"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
