<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#0B141A">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <!-- TOP BAR -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topBar"
                android:layout_width="0dp"
                android:layout_height="@dimen/_56sdp"
                android:paddingHorizontal="@dimen/_16sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/arrow___left"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/txtEditStamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Stamp"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/btnDone"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/tick_on_07"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--  STAMP -->
            <ImageView
                android:id="@+id/stamp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_210sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/cal_grp_7_th_screen"
                app:layout_constraintTop_toBottomOf="@id/topBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- ================= DATE & TIME ================= -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dateRow"
                android:layout_width="0dp"
                android:layout_height="@dimen/_48sdp"
                android:paddingHorizontal="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/stamp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/iconCalendar"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/calendar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/txtDateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date &amp; Time"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="#000000"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:layout_constraintStart_toEndOf="@id/iconCalendar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/txtDateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31/07/23 09:10 AM"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#6B6B6B"
                    app:layout_constraintEnd_toStartOf="@id/iconDateArrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/iconDateArrow"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/arrow___right_07"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ================= ADDRESS ================= -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/addressRow"
                android:layout_width="0dp"
                android:layout_height="@dimen/_48sdp"
                android:paddingHorizontal="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/dateRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/iconLocation"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/location_07"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/txtAddressTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="#000000"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:layout_constraintStart_toEndOf="@id/iconLocation"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/txtAddressValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Automatic"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#6B6B6B"
                    app:layout_constraintEnd_toStartOf="@id/iconAddressArrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/iconAddressArrow"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/arrow___right_07"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--  ADDRESS TEXT -->
            <TextView
                android:id="@+id/addressText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16sdp"
                android:text="201–207, Oasis Corner, Dhanmora Char Rasta, Katargam, Surat – 395004, Gujarat, India."
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/addressRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!--  TRANSPARENCY -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/transparencyRow"
                android:layout_width="0dp"
                android:layout_height="@dimen/_48sdp"
                android:paddingHorizontal="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/addressText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/iconTransparency"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/mask_07"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/txtTransparency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transparency"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="#000000"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:layout_constraintStart_toEndOf="@id/iconTransparency"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/txtTransparencyValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60 %"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#6B6B6B"
                    app:layout_constraintEnd_toStartOf="@id/iconTransArrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/iconTransArrow"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/arrow___down_07"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--  TRANSPARENCY GRAPH  -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/transparencyGraph"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/transparencyRow">

                <ImageView
                    android:id="@+id/imgTransLine"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_6sdp"
                    android:src="@drawable/stamp_line_per"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imgTransValue"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@drawable/stamp_07_box_line"
                    app:layout_constraintBottom_toBottomOf="@id/imgTransLine"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/imgTransLine" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--  FONT COLOR ROW  -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fontColorRow"
                android:layout_width="0dp"
                android:layout_height="@dimen/_48sdp"
                android:paddingHorizontal="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/transparencyGraph"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Font Color Icon -->
                <ImageView
                    android:id="@+id/iconFontColor"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/bucket_07"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!-- Font Color Text -->
                <TextView
                    android:id="@+id/txtFontColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Font Color"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="#000000"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:layout_constraintStart_toEndOf="@id/iconFontColor"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!-- Arrow -->
                <ImageView
                    android:id="@+id/colorCircleOrange"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/ellipse_07"
                    android:layout_marginStart="@dimen/_128sdp"
                    app:layout_constraintStart_toEndOf="@id/txtFontColor"
                    app:layout_constraintEnd_toStartOf="@id/iconFontArrow"
                    app:layout_constraintTop_toTopOf="@id/iconFontArrow"
                    app:layout_constraintBottom_toBottomOf="@id/iconFontArrow"/>



                <ImageView
                    android:id="@+id/iconFontArrow"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/arrow___down_07"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--  FONT COLOR OPTIONS  -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fontColorOptions"
                android:layout_width="0dp"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/fontColorRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- COLOR SQUARE -->
                <ImageView
                    android:id="@+id/tint"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@drawable/tint_07_bottom"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/_16sdp"/>

                <ImageView
                    android:id="@+id/colorSquare"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@drawable/group_white_07"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/_46sdp"/>

                <!-- COLOR CIRCLE 1 -->
                <ImageView
                    android:id="@+id/colorCircle1"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/rectangle_orange_07"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:layout_constraintStart_toEndOf="@id/colorSquare"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!-- COLOR CIRCLE 2 -->
                <ImageView
                    android:id="@+id/colorCircle2"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/rectangle_07"
                    android:layout_marginStart="@dimen/_8sdp"
                    app:layout_constraintStart_toEndOf="@id/colorCircle1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!-- COLOR CIRCLE 3 -->
                <ImageView
                    android:id="@+id/colorCircle3"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/rectangle_yellow_07"
                    android:layout_marginStart="@dimen/_8sdp"
                    app:layout_constraintStart_toEndOf="@id/colorCircle2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/colorCircle4"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/rectangle_green_07"
                    android:layout_marginStart="@dimen/_8sdp"
                    app:layout_constraintStart_toEndOf="@id/colorCircle3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/colorCircle5"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/rectangle_g_green_07"
                    android:layout_marginStart="@dimen/_8sdp"
                    app:layout_constraintStart_toEndOf="@id/colorCircle4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/colorCircle6"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/rectangle_blue_07"
                    android:layout_marginStart="@dimen/_8sdp"
                    app:layout_constraintStart_toEndOf="@id/colorCircle5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <View
        android:id="@+id/blackOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000" />

    <androidx.cardview.widget.CardView
        android:id="@+id/locationPopupManual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_24sdp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/_16sdp"
        app:cardElevation="@dimen/_8sdp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#FFFFFF">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp">

            <!-- TITLE -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Location"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textColor="#000000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- ADDRESS INPUT BOX -->
            <androidx.cardview.widget.CardView
                android:id="@+id/manualAddressBox"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/stamp_7_up_bg_input_border"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/txtTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- CENTER PLACEHOLDER -->
                    <TextView
                        android:id="@+id/txtPlaceholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#8A8A8A"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- REAL INPUT -->
                    <EditText
                        android:id="@+id/edtManualAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:text="70 Washington Square South, New York, NY 10012, United States"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@null"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- CANCEL -->
            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:text="Cancel"
                android:gravity="center"
                android:textColor="#0A84FF"
                android:background="@drawable/cancel_button_09"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/manualAddressBox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnSave"
                app:layout_constraintWidth_percent="0.48"/>

            <!-- SAVE -->
            <TextView
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:text="Save"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="@drawable/save_button_09"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/manualAddressBox"
                app:layout_constraintStart_toEndOf="@id/btnCancel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.48"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>





</FrameLayout>