    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="@dimen/_90sdp"
        android:background="#CC1E2A32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ===== LEFT : STAMP ===== -->

        <ImageView
            android:id="@+id/iconStamp"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/stamp_settings_pg_bottom_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnCapture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txtStamp"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginStart="@dimen/_24sdp"/>

        <TextView
            android:id="@+id/txtStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stamp"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/iconStamp"
            app:layout_constraintStart_toStartOf="@id/iconStamp"
            app:layout_constraintEnd_toEndOf="@id/iconStamp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            />

        <!-- ===== CENTER : CAPTURE ===== -->

        <ImageButton
            android:id="@+id/btnCapture"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/mid_click_setting_04"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- ===== RIGHT : MY PHOTOS ===== -->

        <ImageView
            android:id="@+id/iconPhotos"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/girl_image_setting_04pg"
            app:layout_constraintStart_toEndOf="@id/btnCapture"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txtPhotos"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginEnd="@dimen/_24sdp"/>

        <TextView
            android:id="@+id/txtPhotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Photos"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/iconPhotos"
            app:layout_constraintStart_toStartOf="@id/iconPhotos"
            app:layout_constraintEnd_toEndOf="@id/iconPhotos"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_8sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/iconFlip"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:src="@drawable/rotate_reverse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        android:layout_marginEnd="@dimen/_24sdp"
        android:tint="@color/white"
        android:layout_marginBottom="@dimen/_8sdp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
